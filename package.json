{
  "name": "@ngeor/yart",
  "version": "2.0.0",
  "description": "yet another release tool",
  "main": "src/yart.js",
  "scripts": {
    "pretest": "eslint .",
    "test": "nyc mocha src/*.test.js src/**/*test.js",
    "clean": "rimraf coverage",
    "eslint": "eslint .",
    "mocha": "mocha src/*.test.js src/**/*test.js",
    "nyc": "nyc mocha src/*.test.js src/**/*test.js",
    "coveralls": "npm run nyc && nyc report --reporter=text-lcov | coveralls",
    "jsdoc": "jsdoc -r -c ./jsdoc.json -d jsdoc .",
    "postversion": "git push --follow-tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ngeor/yart.git"
  },
  "bugs": {
    "url": "https://github.com/ngeor/yart/issues"
  },
  "homepage": "https://github.com/ngeor/yart#readme",
  "author": "Nikolaos Georgiou",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "eslintIgnore": [
    "coverage/"
  ],
  "nyc": {
    "check-coverage": true,
    "per-file": false,
    "lines": 91,
    "statements": 90,
    "functions": 89,
    "branches": 83,
    "include": [
      "src/**/*.js"
    ],
    "reporter": [
      "lcov",
      "html",
      "text"
    ],
    "all": true
  },
  "dependencies": {
    "commander": "^2.19.0",
    "sax": "^1.2.4"
  },
  "bin": "src/yart.js",
  "devDependencies": {
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "coveralls": "^3.0.3",
    "eslint": "^5.15.2",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.16.0",
    "jsdoc": "^3.5.5",
    "mocha": "^6.0.2",
    "nyc": "^13.3.0",
    "proxyquire": "^2.1.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.2.7",
    "sinon-chai": "^3.3.0"
  }
}
